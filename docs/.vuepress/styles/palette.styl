$accentColor = #446adb

body.dark
  // based on https://github.com/visualfanatic/vuepress-theme-dark
  // MIT License, by Damian Stasik

  $accentColor = #44dbb5
  $vue-color = #44dbb5
  $bg-color = #121822
  $border-color = #1C2B42
  $text-color = #C8CECD

  $MQNarrow = 959px
  $MQMobile = 719px
  $MQMobileNarrow = 419px

  &
    background-color #08080D
    color $text-color
    min-height 100vh

  ::-webkit-scrollbar
    width 0.75rem
    height 0.75rem
  ::-webkit-scrollbar-track
      background rgba($text-color, 0.17)
      border-radius 0.35rem
  ::-webkit-scrollbar-thumb
      border-radius 0.35rem
      background: rgba($text-color, 0.27)
      {trans}
      &:hover
          background rgba($text-color, 0.5)
      &:active
          background rgba($text-color, 0.35)
  ::-webkit-scrollbar-track:window-inactive
      background rgba($text-color, 0.1)
  ::-webkit-scrollbar-corner
      background transparent

  a
    color $accentColor
  .dropdown-wrapper .nav-dropdown .dropdown-item a
      &.router-link-active, &:hover
        color $accentColor
      &.router-link-active::after
        border-left-color $accentColor
  a.sidebar-link.active
    border-left-color $accentColor
  .theme-default-content code
    background $border-color
    color lighten(desaturate($border-color, 25%), 75%)
  div[class*="language-"] .highlight-lines .highlighted
    background rgba($accentColor, 0.15)
  .theme-default-content pre code
    background transparent
  div[class*="language-"]
    background $border-color

  th, td
    border: 1px solid $border-color

  tr:nth-child(2n)
    background-color: rgba($border-color, 0.35)

  .custom-block.tip
    background-color $border-color
    border-color $accentColor
  .custom-block.warning
    background-color rgba(255, 229, 100, 0.1)
    color #b2a45f
  .custom-block.warning a
    color $accentColor
  .custom-block.danger
    background-color #3e252d
    border-color #c00
    color #cfb1b1
  .custom-block.danger a
    color $accentColor
  .custom-block.danger .custom-block-title
    color #fd6565

  .search-box
    input
      border-color $border-color
      background-color $bg-color
      color #C8CECD
    .suggestions
      background-color desaturate(lighten($bg-color, 15%), 10%)
      border 0
    .suggestion
      a
        color #C8CECD

      &.focused
        background-color $border-color
        a
          color #fff
  .dropdown-wrapper .dropdown-title
      color #C8CECD

  .algolia-search-wrapper
    .algolia-autocomplete
      .ds-dropdown-menu
        border: 0
        background-color desaturate(lighten($bg-color, 15%), 10%)

        &:before
          background-color desaturate(lighten($bg-color, 15%), 10%)
          border: 0;

  @media (min-width: $MQMobile)
    .dropdown-wrapper
      .nav-dropdown
        background-color desaturate(lighten($bg-color, 15%), 10%)
        border 0

        .dropdown-item
          h4
            border-top-color $border-color

  .sw-update-popup
    background-color desaturate(lighten($bg-color, 15%), 10%)
    border 0

  .navbar
    border-bottom-color desaturate(lighten($bg-color, 10%), 10%)
    background-color $bg-color

    .site-name
      color #fff

    .links
      background-color $bg-color

  .page-edit
    .edit-link
      a
        color desaturate(lighten($bg-color, 50%), 50%)

        &:hover,
        &:focus
          color #fff
    .last-updated
      .prefix
        color desaturate(lighten($bg-color, 50%), 50%)

      .time
        color desaturate(lighten($bg-color, 40%), 50%)

  h2
    border-bottom-color desaturate(lighten($bg-color, 10%), 10%)

  hr
    border-top-color desaturate(lighten($bg-color, 10%), 10%)

  .page-nav
    .inner
      color desaturate(lighten($bg-color, 50%), 50%)
      border-top-color desaturate(lighten($bg-color, 10%), 10%)

  .sidebar
    background-color $bg-color
    border-right-color desaturate(lighten($bg-color, 10%), 10%)

    .nav-links
      border-bottom-color desaturate(lighten($bg-color, 10%), 10%)

    a.sidebar-link
      color #C8CECD

      &:hover,
      &:focus,
      &.active
        color #fff

    .sidebar-heading
      color #C8CECD

      &.open,
      &:hover
        color #fff

  .nav-links
    a
      color #C8CECD

      &:hover,
      &:focus,
      &.router-link-active
        color #fff

  .home
    .hero
      .description
        color desaturate(lighten($bg-color, 50%), 50%)
      .action-button
        border 0
    .features,
    .footer
      border-top-color desaturate(lighten($bg-color, 10%), 10%)
    .feature
      h2
        color desaturate(lighten($bg-color, 70%), 40%)
      p
        color desaturate(lighten($bg-color, 50%), 50%)
    .footer
      color desaturate(lighten($bg-color, 50%), 50%)